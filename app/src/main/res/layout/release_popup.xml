<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DDDFDE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin5"
            android:textColor="@color/bootstrap_gray"
            android:text="请确认要发布的农机信息"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="农机编号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
            <TextView
                android:text="130100012121"
                android:id="@+id/tv_machine_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin5">
            <TextView
                android:text="农机服务类型："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
            <TextView
                android:text="播种"
                android:id="@+id/tv_machine_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin5">
            <TextView
                android:id="@+id/showType"
                android:text="作物类型："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
            <TextView
                android:text="小麦,玉米"
                android:id="@+id/tv_cropType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin5">
            <TextView
                android:text="农机每天作业时长："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
            <TextView
                android:text="16小时"
                android:id="@+id/tv_workTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin5">
            <TextView
                android:text="其他描述："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/Black"/>
            <TextView
                android:text="无"
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@color/Black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin10">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btn_cancel"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin25"
                bootstrap:bootstrapBrand="danger"
                bootstrap:bootstrapSize="sm"
                bootstrap:buttonMode="regular"
                bootstrap:showOutline="true"
                bootstrap:roundedCorners="true"/>
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:text="发布"
                android:id="@+id/btn_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bootstrap:bootstrapBrand="danger"
                bootstrap:bootstrapSize="sm"
                bootstrap:buttonMode="regular"
                bootstrap:showOutline="false"
                bootstrap:roundedCorners="true"/>
        </LinearLayout>
</LinearLayout>