<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding10"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding10"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin30"
            android:textColor="@color/whiteFont"
            android:textSize="@dimen/font20"
            android:layout_marginBottom="@dimen/margin60"
            android:background="@android:color/transparent"
            android:text="       根据农户的需求信息你可以选择作业地点、距离和作业的起始时间,智慧农机平台将用人工智能算法进行优化，提供效率最优的作业方案，供您参考。"/>
        <Button
            android:id="@+id/get_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="@dimen/margin30"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font22"
            android:textColor="@color/primaryClolor"
            android:text="开始体验"/>
    </LinearLayout>

</RelativeLayout>