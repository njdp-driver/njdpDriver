<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="25dip" />
            <gradient
                android:angle="270"
                android:centerY="0.45"
                android:endColor="#808080"
                android:startColor="#808080" />
        </shape>
        <padding
            android:left="7dp"
            android:top="7dp"
            android:right="7dp"
            android:bottom="7dp" />
    </item>
    <item>
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.45"
                    android:endColor="#808080"
                    android:startColor="#808080" />
            </shape>
        </clip>
        <padding
            android:left="7dp"
            android:top="7dp"
            android:right="7dp"
            android:bottom="7dp" />
    </item>
</layer-list>